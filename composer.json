{
    "name": "ameax/gatewayapi-sms",
    "description": "A framework-agnostic PHP package for sending SMS via GatewayAPI",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Schmidt",
            "email": "69188126+ms-aranes@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.86"
    },
    "autoload": {
        "psr-4": {
            "Ameax\\GatewayApiSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ameax\\GatewayApiSms\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix",
        "test": "phpunit",
        "check": [
            "@analyse",
            "@format --dry-run"
        ]
    }
}
